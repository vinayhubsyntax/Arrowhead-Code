<div class="custom_feature_badges">
   <div class="row">
     <div class="wrapper">
       {% for block in section.blocks %}
         <div class="cus_badhe_image_text_wrapper">
         {% if block.settings.img != blank %}
           <div class="image">
             <img src="{{ block.settings.img | img_url:'master' }}">
           </div>
           {% endif %}
        {% if  block.settings.text != blank %}   <h3 class="bdg_text">{{ block.settings.text }}</h3>{% endif %}
         </div>
         {% endfor %}
     </div>
   </div>
</div>
<style>
  .custom_feature_badges h3.bdg_text {
    color: #000;
    font-size: 16px;
    margin: 0;
    font-weight: 400;
}
.custom_feature_badges .wrapper {
    width: 100%;
    gap: 33px;
    display: flex
;
    flex-flow: row wrap;
    justify-content: center;
    padding: 4px 10px;
    background-color: #fff;
    
    align-items: center;
}
.custom_feature_badges {
    border-top: solid 1px #28292b;
    border-bottom: solid 1px #28292b;
      margin-top: 35px;

}

.custom_feature_badges img {
    width: 100%;
    max-width: 33px;
}
.cus_badhe_image_text_wrapper {
    display: flex
;
    gap: 8px;
}
  .custom_feature_badges .image {
    font-size: 0;
    display: flex
;
}

@media(max-width:900px){
  .custom_feature_badges .wrapper {
    width: 100%;
    gap: 20px;
    display: flex
;
    flex-flow: row wrap;
    justify-content: center;
    padding: 0px 10px 30px;
    background-color: #fff;
    align-items: center;
    flex-flow: row wrap;
    display: grid
;
    grid-template-columns: repeat(3, 1fr);
}
  .custom_feature_badges h3.bdg_text {
    color: #000;
    font-size: 16px;
    margin: 0;
    font-weight: 400;
    text-align: center;
    line-height: 19px;
}
.cus_badhe_image_text_wrapper {
    display: flex
;
    gap: 8px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
  .custom_feature_badges {
    margin-top: 0;
    border-top: navajowhite;
}
}
</style>
{% schema %}
  {
    "name": "Custom Badges",
    "settings": [
  
    ],
    "blocks": [
      {
        "type": "Icon_text",
        "name":"Icon Text",
        "settings":[
          {
            "type":"image_picker",
            "id":"img",
            "label":"Select Image"
          },
          {
            "type":"text",
            "id":"text",
            "label":"Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name":"Custom Badges",
      }
    ]
  }
{% endschema %}
