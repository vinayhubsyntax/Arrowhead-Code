<div class="custom_feature_carousel">
  <div class="row">
    <div class="wrapper">
   {% if section.settings.head != blank %}   <div class="heading_wrapper"><h2>{{ section.settings.head }}</h2></div>{% endif %}
    </div>
    <div class="swiper mySwiper">
    <div class="wrapper_featured_crausel swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
      <div class="main_featured_crausel">
        {% if block.settings.img != blank %}
        <div class="image">
          <img src="{{ block.settings.img | img_url:'master' }}">
        </div>
        {% endif %}
        <div class="feature-description">
        {% if block.settings.text != blank %}  <h3 class="feature-title ">{{ block.settings.text }} </h3>{% endif %}
      {% if block.settings.para != blank %}  <p class="feature-text"> {{ block.settings.para }}</p>{% endif %}
        </div>
      </div>
        </div>
{% endfor %}
      
    </div>
      <div class="swiper-button-next"><div class="next_arrow"><svg width="18" height="30" viewBox="0 0 18 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M1 28.8569L16 15.2855L1 0.99979" stroke="#fff" stroke-width="2"></path>
                        </svg></div></div>
    <div class="swiper-button-prev"><div class="prev_arrow"><svg width="18" height="30" viewBox="0 0 18 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M17 1L2 14.5714L17 28.8571" stroke="#fff" stroke-width="2"></path>
                        </svg></div></div>
    </div>
  </div>
</div>
<style>
  .custom_feature_carousel .wrapper_featured_crausel {
    display: flex
;
    width: 100%;
}
.custom_feature_carousel img {
    width: 100%;
}

  .custom_feature_carousel .heading_wrapper h2 {
    font-size: 36px;
    margin: 0 0 15px 0px;
}

.custom_feature_carousel h3.feature-title {
    font-size: 20px;
    margin: 10px 0px 3px;
    line-height: 28px;
}
.custom_feature_carousel p.feature-text {
    margin: 0;
    font-size: 16px;
}
 .custom_feature_carousel .swiper-button-prev:after {
    display: none;
}

.custom_feature_carousel .swiper-button-next:after {
    display: none;
}

  .custom_feature_carousel .prev_arrow svg {
    width: 26px;
    height: 50px;
    display: block;
    filter: drop-shadow(0px 0px 3px rgba(0, 0, 0, .6));
}

.custom_feature_carousel .prev_arrow svg path {
    stroke-width: 3px;
}
.custom_feature_carousel .next_arrow svg path {
    stroke-width: 3px;
}
 .custom_feature_carousel .next_arrow svg {
    width: 26px;
    height: 50px;
    display: block;
    filter: drop-shadow(0px 0px 3px rgba(0, 0, 0, .6));
}
 .custom_feature_carousel .swiper-button-next, .custom_feature_carousel .swiper-button-prev {
   
    top: 40%;
}
  .custom_feature_carousel {
    padding: 40px 0px;
}
    @media(min-width:1024px){
.custom_feature_carousel .swiper-button-prev {
    left: 30px;
}
  .custom_feature_carousel .swiper-button-next {
    right: 30px;
}
    }
  @media(max-width:1024px){
    .custom_feature_carousel .next_arrow svg {
            width: 13px;
        height: 25px;
    }
     .custom_feature_carousel .prev_arrow svg {
            width: 13px;
        height: 25px;
    }
    .custom_feature_carousel .swiper-button-next, .custom_feature_carousel .swiper-button-prev {
    top: 37%;
}
    .custom_feature_carousel {
    padding: 22px 0px;
}
  }

  @media(max-width:840px){
      .custom_feature_carousel .swiper-button-next, .custom_feature_carousel .swiper-button-prev {
        top: 31%;
    }
  }
@media(max-width:768px){
  .custom_feature_carousel .heading_wrapper h2 {
    font-size: 26px;
    margin: 0px 0 8px 0px;
}
  .custom_feature_carousel h3.feature-title {
    font-size: 16px;
    margin: 10px 0px 3px;
    line-height: 20px;
}
.custom_feature_carousel p.feature-text {
    margin: 0;
    font-size: 14px;
}
}
@media(max-width:480px){
  
    .custom_feature_carousel .swiper-button-next, .custom_feature_carousel .swiper-button-prev {
        top: 42%;
    }
}
</style>
<script>
    var swiper = new Swiper(".custom_feature_carousel .mySwiper", {
       loop: true,
      slidesPerView: 1.4,
      spaceBetween: 11,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      breakpoints: {
        640: {
          slidesPerView: 1.4,
          spaceBetween: 11,
        },
        768: {
          slidesPerView: 3.3,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 3.3,
          spaceBetween: 20,
        },
      },
    });
  </script>



{% schema %}
  {
    "name": "Custom Feature Carousel ",
    "settings": [
      {
        "type":"text",
        "id":"head",
        "label":"Heading",
      }
    ],
    "blocks": [
      {
        "type":"featured_image",
        "name":"Featured Crousel",
        "settings": [
          {
            "type":"image_picker",
            "id":"img",
            "label":"Select Image",
            
          },
          {
            "type":"text",
            "id":"text",
            "label":"Title"
          },
          {
            "type":"text",
            "id":"para",
            "label":"Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Feature Carousel "
      }
    ]
  }
{% endschema %}
